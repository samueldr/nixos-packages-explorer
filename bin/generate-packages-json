#!/usr/bin/env nix-shell
#!nix-shell -i bash ../default.nix

PS4=' $ '

set -e
set -u
set -x

unset NIX_PATH

PUBLIC="$PWD/channels/"

join() { local IFS="$1"; shift; echo -n "$*"; }

series_array() {
	# Eww...
	set +x
	echo -n '["'
	join , ${@} | sed 's/,/","/g'
	echo -n '"]'
	echo
	set -x
}

generate() {
	local CHANNEL="$1"
	shift
	local CHANNEL_NAME="$1"
	shift
	local NIXPKGS="https://nixos.org/channels/${CHANNEL}/nixexprs.tar.xz"
	local FILENAME="packages-${CHANNEL}.json.gz"

	mkdir -p tmp
	(
	cd tmp

	nixpkgs=$(nix-instantiate --find-file nixpkgs -I nixpkgs="${NIXPKGS}")

	(echo -n '{ "commit": "' && cat $nixpkgs/.git-revision && echo -n '",' && \
	 echo -n '"channel_name":"'${CHANNEL_NAME}'",' && \
	 echo -n '"packages":' \
	  && nix-env -f '<nixpkgs>' -I nixpkgs=${NIXPKGS} -qa --json --arg config '{allowUnfree = true;}' \
	  && echo -n '}') \
	  | sed "s|$nixpkgs/||g" | gzip -9 > "${FILENAME}.tmp"

	gunzip < "${FILENAME}.tmp" | python -mjson.tool > /dev/null

	mv "${FILENAME}.tmp" "${FILENAME}"
	mkdir -p "${PUBLIC}"
	mv "${FILENAME}" "${PUBLIC}/"
	)
	(
	cd "${PUBLIC}"
	gunzip -fk "${FILENAME}"
	)
}

# The first one is the default channel.
# The default one should be the current stable.
SERIES=(
	nixos-18.09
	nixos-18.03
	#nixos-17.09
	#nixos-17.03
	nixos-unstable
	nixpkgs-unstable
)

for series in "${SERIES[@]}"; do
	generate "$series" $(echo "$series" | cut -d'-' -f1)
done

series_array "${SERIES[@]}" > ${PUBLIC}/packages-channels.json
